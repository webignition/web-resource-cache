server {
    listen       80;
    root         /app/public;

    location / {
        # try to serve file directly, fallback to index.php
        try_files $uri /index.php$is_args$args;
    }

    # pass the PHP scripts to FastCGI server listening on 127.0.0.1:9000
    location ~ ^/index\.php(/|$) {
        fastcgi_pass   app-web:9000;
        fastcgi_split_path_info ^(.+\.php)(/.*)$;
        include fastcgi_params;

        fastcgi_param APP_ENV "prod";
        fastcgi_param APP_SECRET "secret";
        fastcgi_param DATABASE_URL "mysql://{{ .Env.DB_USER }}:{{ .Env.DB_PASSWORD }}@mysql:3306/{{ .Env.DB_NAME }}";

        fastcgi_param CALLBACK_ALLOWED_HOSTS "*";
        fastcgi_param RETRIEVER_TIMEOUT_SECONDS "30";
        fastcgi_param MESSENGER_TRANSPORT_DSN "amqp://guest:guest@rabbitmq:5672/%2f/messages";

        fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
        fastcgi_param DOCUMENT_ROOT $realpath_root;

        internal;
    }

    # return 404 for all other php files not matching the front controller
    # this prevents access to other php files you don't want to be accessible.
    location ~ \.php$ {
        return 404;
    }
}
